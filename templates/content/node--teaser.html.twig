{% set teaser = [
  'gov-border-2 gov-border-primary-dark gov-rounded gov-p-4 gov-mb-2'
] %}
<article{{ attributes.addClass(teaser) }}>
  {{ title_prefix }}
  {% if not page %}
    <h2{{ title_attributes }} class="gov-text-2xl gov-mb-2">
      <a href="{{ url }}" rel="bookmark" class="gov-no-underline">{{ label }}</a>
    </h2>
  {% endif %}
  {{ title_suffix }}

  {% if display_submitted %}
    <footer>
      {{ author_picture }}
      <div{{ author_attributes }}>
        {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
        {{ metadata }}
      </div>
    </footer>
  {% endif %}
  <div{{ content_attributes }}>
    {{ content }}
  </div>
</article>
